<Window x:Class="Quickr.Views.PropertyPagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Quickr.ViewModels"
        xmlns:configuration="clr-namespace:Quickr.ViewModels.Configuration"
        mc:Ignorable="d"
        Title="Server properties" MinHeight="490" Height="550" MinWidth="680" Width="790" FontSize="14" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="CanResize" 
        ShowInTaskbar="False"
        d:DataContext="{d:DesignInstance configuration:PropertyPagesViewModel}">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="Margin" Value="2" />
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="180"  />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <TextBox 
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,5"
            Padding="3"
            FontSize="13"
            Foreground="Gray"
            Text="Search options" />
        <ListView
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            FontSize="13"
            ItemsSource="{Binding Sections}"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden">
        </ListView>
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="10,-5,0,0">
            <GroupBox
                DataContext="{Binding NetworkPage}"
                VerticalAlignment="Top"
                Padding="8"
                Header="Network"
                BorderBrush="#FFABADB3">
                <StackPanel>
                    <TextBlock Text="Bind" />
                    <TextBox Text="{Binding Path=Bind.Value.CurrentValue}" />
                    <TextBlock Text="Port" />
                    <TextBox Text="{Binding Path=Port.Value.CurrentValue}" />
                    <CheckBox IsChecked="{Binding Path=ProtectedMode.IsYes.CurrentValue}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel
            Grid.Row="2" 
            Grid.Column="1"
            Orientation="Horizontal"
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom"
            Margin="5,0,5,0">
            <Button IsDefault="True">Save changes</Button>
            <Button IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
